<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="200dp"
    android:layout_height="280dp"
    android:background="@color/DarkerYetDarker"
    android:id="@+id/cardview_id">
    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/DarkerYetDarker"
        >
    <FrameLayout
        android:layout_width="120dp"
        android:layout_height="180dp"
        android:layout_gravity="top|right"
        android:background="@null"
        >

        <ImageView
            android:id="@+id/cardview_weather_photo"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/noimage" />
    </FrameLayout>
    <FrameLayout
        android:layout_width="80dp"
        android:layout_height="80dp"
        android:layout_gravity="center_vertical"
        android:background="@null"
        >
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/cardview_sea_level"
            android:textSize="8sp"
            android:text="sl:1003.24"
            android:textColor="@color/colorWhite"
            android:layout_gravity="center_horizontal"
            android:textAlignment="center"
            />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/cardview_temperature"
            android:textSize="12sp"
            android:text="15/58 cd"
            android:textAlignment="center"
            android:textColor="@color/colorWhite"
            android:layout_gravity="center"
            />
    </FrameLayout>
    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="100dp"
        android:layout_gravity="bottom|center_horizontal"
        android:background="@null"
        >
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/cardview_date"
            android:textSize="18sp"
            android:text="2017-02-06"
            android:textAlignment="center"
            android:textStyle="bold"
            android:textColor="@color/colorWhite"
            android:layout_gravity="top|center_horizontal"
            />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/cardview_summary"
            android:text="Light rain in the morning and afternoon."
            android:textSize="16dp"
            android:textAlignment="center"
            android:textStyle="italic"
            android:textColor="@color/colorWhite"
            android:layout_gravity="bottom|center_horizontal"
            />
    </FrameLayout>
</FrameLayout>
</android.support.v7.widget.CardView>
